<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light" >

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="3dp" >

        <TextView
            android:id="@+id/maximumfrequency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maximum Frequency"
            android:textSize="19sp" />

        <antistatic.spinnerwheel.WheelHorizontalView
            android:id="@+id/mins"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/minimumfrequency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="Minimum Frequency"
            android:textSize="19sp" />

        <antistatic.spinnerwheel.WheelHorizontalView
            android:id="@+id/minimumfreq_spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="Scaling Governor"
            android:textSize="19sp" />

        <antistatic.spinnerwheel.WheelHorizontalView
            android:id="@+id/governor_spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingBottom="2dp" >

        <Button
            android:id="@+id/button_apply"
            style="@style/ButtonAppTheme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Apply" />
    </LinearLayout>

</RelativeLayout>